@model MarketPlace.dataLayer.DTOs.Account.LoginUserDto
@using MarketPlace.dataLayer.DTOs.Site
@{
    ViewData["Title"] = "ورود";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">خانه</a></li>
                        <li>ورود به حساب کاربری</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="customer_login mt-60">
    <div class="container">
        <div class="row">

            <!--register area start-->
            <div class="col-lg-6 col-md-6 offset-lg-3 offset-md-3">
                <div class="account_form register">
                    <h2>  ورود</h2>
                    <form asp-action="Login" method="post">
                        <partial name="_CaptchaInput" />
                        <p>
                            <label> ایمیل   <span>*</span></label>
                            <input type="text" asp-for="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </p>
                        <p>
                            <label>رمز عبور <span>*</span></label>
                            <input asp-for="Password" type="password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </p>
                        <p>
                            <a asp-area="" asp-controller="Account" asp-action="ForgotPassword">کلمه عبور خود را فراموش کرده ام !</a>
                        </p>
                        <div class="login_submit">
                            <button type="submit">ورود</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--register area end-->
        </div>
    </div>
</div>

@section scripts{ 
<partial name="_JqueryValidators"/>
<partial name="CaptchaScripts"/>
}