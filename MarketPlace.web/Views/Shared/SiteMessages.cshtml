
@if (
TempData["SuccessMessage"] != null ||
TempData["ErrorMessage"] != null ||
TempData["InfoMessage"] != null ||
TempData["WarningMessage"] != null
)
{
    if (TempData["SuccessMessage"] != null)
    {
        <script>
    $(function () {
        ShowMessage('  موفقیت', '@TempData["SuccessMessage"]', "success")
    });
        </script>
    }
    if (TempData["ErrorMessage"] != null)
    {
        <script>
    $(function () {
        ShowMessage('  خطا', '@TempData["ErrorMessage"]', "error")
    });
        </script>
    }
    if (TempData["InfoMessage"] != null)
    {
        <script>
    $(function () {
        ShowMessage('اطلاعات', '@TempData["InfoMessage"]', "info")
    });
        </script>
    }
    if (TempData["WarningMessage"] != null)
    {
        <script>
    $(function () {
        ShowMessage('  هشدار', '@TempData["WarningMessage"]', "warning")
    });
        </script>
    }
}
