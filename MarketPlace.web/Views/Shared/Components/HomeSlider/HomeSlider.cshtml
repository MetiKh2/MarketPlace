@model List<MarketPlace.dataLayer.Entities.Site.Slider>
@using MarketPlace.application.EntitiesExtensions
<section class="slider_section mb-70">
    <div class="slider_area owl-carousel">
        @if (Model.Any() && Model != null)
        {
            foreach (var item in Model)
            {
                <div class="single_slider d-flex align-items-center" data-bgimg="@item.GetSliderImage()">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <div class="slider_content">
                                    <h1> @item.MainHeader</h1>
                                    <h2>@item.SecondHeader</h2>
                                    <p>@item.Description</p>
                                    <a class="button" href="@item.Link" target="_blank">اکنون بخرید</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</section>
<!--slider area end-->