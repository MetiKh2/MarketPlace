@{
    ViewData["Title"] = "ویرایش گالری";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using MarketPlace.application.Utils
@model MarketPlace.dataLayer.DTOs.Store.CreateOrEditProductGalleryDto
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">خانه</a></li>
                        <li>@ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    @await Component.InvokeAsync("StoreSideBar")
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade active show" id="account-details">
                            <h3>@ViewData["Title"] </h3>
                               <div class="login">
                                <div class="login_form_container">
                                    <div class="account_login_form">
                                        <form id="create-product-form" enctype="multipart/form-data" asp-action="EditGallery" asp-area="Store" asp-controller="Product">
                                            <div class="row">
                                                <div class="col-md-6">
                                           <label class="d-block">اولویت</label>
                                          <input type="number" asp-for="DisplayPeriority">
                                           <span class="text-danger d-block mb-1" asp-validation-for="DisplayPeriority"></span>
                                             </div>
                                                <div class="col-md-6">
                                                    <label class="d-block">تصویر</label>
                                                    <input type="file" name="Image" accept=".ong,.jpg,.jpeg" />
                                                </div>
                                            <hr />
                                            <div class="col-md-12">
                                                <img src="@(PathExtension.ProductGalleryThumbImage+Model.ImageName)"/>
                                            </div>
                                            <hr />
                                            </div>

                                            <div class="save_button primary_btn default_button">
                                                <button type="submit">  ویرایش</button>
                                            </div>
                                            <input type="hidden" asp-for="ProductId" />
                                            <input type="hidden" asp-for="ImageName"/>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
 
@section scripts{
<partial name="_JqueryValidators" />
}

