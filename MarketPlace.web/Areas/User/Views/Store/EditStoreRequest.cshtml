@model MarketPlace.dataLayer.DTOs.Store.EditRequestStoreDto
@{
    ViewData["Title"] = "EditStoreRequest";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">خانه</a></li>
                        <li>@ViewData["Title"]  </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    @await Component.InvokeAsync("UserSideBar")
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade show active" id="account-details">
                            <h3>@ViewData["Title"]</h3>
                            <div class="login">
                                <div class="login_form_container">
                                    <div class="account_login_form">
                                        <form asp-action="EditStoreRequest" asp-area="User" asp-controller="Store">
                                            <input type="hidden" asp-for="Id"/>
                                            <partial name="_CaptchaInput" />
                                            <label asp-for="StoreName"></label>
                                            <input type="text" asp-for="StoreName">
                                            <span class="text-danger d-block mb-1" asp-validation-for="StoreName"></span>

                                            <label asp-for="Phone"></label>
                                            <input type="text" asp-for="Phone">
                                            <span class="text-danger d-block mb-1" asp-validation-for="Phone"></span>

                                            <label asp-for="Address"></label>
                                            <textarea asp-for="Address" class="form-control" rows="10"></textarea>
                                            <span class="text-danger d-block mb-1" asp-validation-for="Address"></span>

                                            <br />
                                            <div class="save_button primary_btn default_button">
                                                <button type="submit">ذخیره</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <partial name="_JqueryValidators" />
    <partial name="CaptchaScripts" />
}

