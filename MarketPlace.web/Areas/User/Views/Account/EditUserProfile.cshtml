@model MarketPlace.dataLayer.DTOs.Account.EditUserProfileDto
@using MarketPlace.application.Utils
@{
    ViewData["Title"] = "ویرایش حساب کاربری";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">خانه</a></li>
                        <li>@ViewData["Title"]  </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="main_content_area">
    <div class="container">
        <div class="account_dashboard">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    @await Component.InvokeAsync("UserSideBar")
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane fade show active" id="account-details">
                            <h3>@ViewData["Title"]</h3>
                            <div class="login">
                                <div class="login_form_container">
                                    <div class="account_login_form">
                                        <form enctype="multipart/form-data" asp-action="EditUserProfile" asp-area="User" asp-controller="Account">
                                            <partial name="_CaptchaInput" />
                                            <label asp-for="FirstName"></label>
                                            <input type="text" asp-for="FirstName">
                                            <span class="text-danger d-block mb-1" asp-validation-for="FirstName"></span>
                                            <label asp-for="LastName"></label>
                                            <input type="text" asp-for="LastName">
                                            <span class="text-danger d-block mb-1" asp-validation-for="LastName"></span>
                                            <br />
                                            <div class="row">
                                                <div class="col-md-9">
                                                    <input type="file" name="avatarImage" />
                                                </div>
                                                <div class="col-md-3">
                                                    <img style="border-radius:50%;width:150px" src="@((!string.IsNullOrEmpty(Model.Avatar)?PathExtension.UserAvatarThumbPath+Model.Avatar:PathExtension.DefaultAvatarOrigin))" />
                                                </div>
                                            </div>
                                            <div class="save_button primary_btn default_button">
                                                <button type="submit">ذخیره</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <partial name="_JqueryValidators" />
    <partial name="CaptchaScripts" />
}}
